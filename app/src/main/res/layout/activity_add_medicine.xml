<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addMedicine"
    android:background="@drawable/home_bg"
    >

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        app:navigationIcon="@drawable/ic_back"
        app:title="Add Medicine"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="26dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:showDividers="none">

            <!-- Medicine Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medicine Name"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMedicineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dosage Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dosage (mg)"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDosage"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Reminder Time -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectTime"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Reminder Time"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:padding="14dp"
                android:backgroundTint="@color/primary_blue"
                app:cornerRadius="50dp" />

            <!-- Start Date -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartDate"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Start Date"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_blue"
                app:cornerRadius="50dp"
                android:padding="14dp" />

            <!-- End Date -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEndDate"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select End Date"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_blue"
                app:cornerRadius="50dp"
                android:padding="14dp" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveMedicine"
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Medicine"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_dark"
                app:cornerRadius="50dp"
                android:padding="16dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
